{
    "tasks": [
        {
            "label": "Rust: cargo build - yaffe-rs",
            "type": "shell",
            "windows": {
                "command": "cargo rustc -- -C link-args=\"Yaffe.res\"",
                "problemMatcher": ["$rustc"],
            },
            "linux" : {
                "command": "cargo rustc",
                "problemMatcher": ["$rustc"],
            },
            "group": "build",
        },
        {
            "label": "Rust: cargo build --release",
            "type": "shell",
            "windows": {
                "command": "cargo rustc --release -- -C link-args=\"Yaffe.res\"",
                "problemMatcher": ["$rustc"],
            },
            "linux": {
                "command": "cargo rustc --release",
                "problemMatcher": ["$rustc"],
            },
            "group": "build",
        }
    ]
}